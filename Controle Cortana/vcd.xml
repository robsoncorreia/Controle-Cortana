  <CommandSet xml:lang="en-us"  Name="controleLuzesEN">
    <CommandPrefix> Control lights </CommandPrefix>
    <Example> Control lights turn on room </Example>
    <Command Name="ligarSala">
      <Example> Control lights turn on room </Example>
      <ListenFor> turn on [light] room </ListenFor>
      <Feedback> turning on light room... </Feedback>
      <Navigate Target="MainPage.xaml"/>
    </Command>
    <Command Name="desligarSala">
      <Example> Control lights turn off room </Example>
      <ListenFor> turn off [light] room </ListenFor>
      <Feedback> turning off light room... </Feedback>
      <Navigate Target="MainPage.xaml"/>
    </Command>
    <Command Name="ligarQuarto">
      <Example> Control lights turn on bedroom </Example>
      <ListenFor> turn on [light] bedroom </ListenFor>
      <Feedback> turning on light bedroom...</Feedback>
      <Navigate Target="MainPage.xaml"/>
    </Command>
    <Command Name="desligarQuarto">
      <Example> Control lights turn off bedroom</Example>
      <ListenFor> turn off [light] bedroom </ListenFor>
      <Feedback> turning off light bedroom......</Feedback>
      <Navigate Target="MainPage.xaml"/>
    </Command>
  </CommandSet>
</VoiceCommands>
